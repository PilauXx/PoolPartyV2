@page
@model PoolPartyV2.Pages.Equipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipe[0].Nom)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipe[0].jeu)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jeu.Nom)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="../MembreDeEquipe/Index" asp-route-id="@item.ID">Composition</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
