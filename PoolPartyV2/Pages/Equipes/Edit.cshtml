@page
@model PoolPartyV2.Pages.Equipes.EditModel

@{
    ViewData["Title"] = "Edit";
    int i = 0;
}

<h1>Edit</h1>

<h4>Equipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipe.ID" />
            <div class="form-group">
                <label asp-for="Equipe.Nom" class="control-label"></label>
                <input asp-for="Equipe.Nom" class="form-control" />
                <span asp-validation-for="Equipe.Nom" class="text-danger"></span>
                <label asp-for="Equipe.IDJeu" class="control-label">Selectionnez le jeu</label>
                <select asp-for="Equipe.IDJeu" class="form-control" asp-items="ViewBag.JEU"></select>
                <div class="card-body">
                    <label class="control-label">Les joueurs :</label>
                    @foreach (var item in Model.licencieParticipations)
                    {
                        <div class="form-check m-1">
                            <input asp-for="licencieParticipations[i].IsSelected" value="@item.IsSelected" class="form-check-input" />
                            <label class="form-check-label"> @Html.DisplayFor(modelItem => item.NomLicencie)</label>
                        </div>
                        i++;
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

