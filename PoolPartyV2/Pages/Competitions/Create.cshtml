@page
@model PoolPartyV2.Pages.Competitions.CreateModel

@{
    ViewData["Title"] = "Create";
    int i = 0;
}

<h1>Créez une nouvelle compétition</h1>

<h4>Renségnez les informations si dessous</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Competition.Nom" class="control-label"></label>
                <input asp-for="Competition.Nom" class="form-control" />
                <span asp-validation-for="Competition.Nom" class="text-danger"></span>
                <label asp-for="Competition.jeu" class="control-label">Selectionnez le jeu</label>
                <select asp-for="Competition.jeu" class="form-control" asp-items="ViewBag.JEU"></select>
                <div class="card-body">
                    @foreach (var item in Model.equipesParticipation)
                    {
                        <div class="form-check m-1">
                            <input asp-for="equipesParticipation[i].IsSelected" value="@item.IsSelected" class="form-check-input" />
                            <label class="form-check-label"> @Html.DisplayFor(modelItem => item.nomEquipe)</label>
                        </div>
                    }
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

