@page
@model PoolPartyV2.Pages.Licencies.EditModel

@{
    ViewData["Title"] = "Edit";
    int i = 0;
}

<h1>Edit</h1>

<h4>Licencie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Licencie.ID" />
            <div class="form-group">
                <label asp-for="Licencie.Nom" class="control-label"></label>
                <input asp-for="Licencie.Nom" class="form-control" />
                <span asp-validation-for="Licencie.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Licencie.Prenom" class="control-label"></label>
                <input asp-for="Licencie.Prenom" class="form-control" />
                <span asp-validation-for="Licencie.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Licencie.Age" class="control-label"></label>
                <input asp-for="Licencie.Age" class="form-control" />
                <span asp-validation-for="Licencie.Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Licencie.LienceValidate" /> @Html.DisplayNameFor(model => model.Licencie.LienceValidate)
                </label>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Ajouter/suprimer un/des role(s)</h3>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.UserRoles)
                    {
                        <div class="form-check m-1">
                            <input asp-for="UserRoles[i].IsSelected" value="@item.IsSelected" class="form-check-input" />
                            <label class="form-check-label"> @Html.DisplayFor(modelItem => item.RoleName)</label>
                        </div>
                        i++;
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
